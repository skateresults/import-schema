{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "const": 1
    },
    "externalId": {
      "type": "string",
      "minLength": 1,
      "description": "ID within competition software; used to avoid accidentally overwriting data within Skate Results"
    },
    "athletes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/athlete"
      }
    },
    "ageGroups": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ageGroup"
      }
    },
    "evaluations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/evaluation"
      },
      "minItems": 1,
      "description": "One evaluation must have id \"0\""
    }
  },
  "required": [
    "version",
    "externalId",
    "athletes",
    "ageGroups",
    "evaluations"
  ],
  "additionalProperties": false,
  "$defs": {
    "ranking": {
      "type": "object",
      "properties": {
        "rank": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "points": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "rank",
        "points"
      ],
      "additionalProperties": false
    },
    "time": {
      "type": "object",
      "properties": {
        "seconds": {
          "type": "number",
          "minimum": 0
        },
        "precision": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "seconds",
        "precision"
      ],
      "additionalProperties": false
    },
    "raceResult": {
      "type": "object",
      "properties": {
        "raceIndex": {
          "type": "integer",
          "minimum": 0
        },
        "startPos": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "rank": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "time": {
          "anyOf": [
            {
              "$ref": "#/$defs/time"
            },
            {
              "type": "null"
            }
          ]
        },
        "points": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ],
          "description": "Points in points race"
        },
        "remarks": {
          "type": "string"
        },
        "rr": {
          "type": "boolean",
          "description": "Reduced in rank"
        },
        "dsqSF": {
          "type": "boolean",
          "description": "Disqualified by sports fault"
        },
        "dsqTF": {
          "type": "boolean",
          "description": "Disqualified by technical fault"
        },
        "fs1": {
          "type": "boolean",
          "description": "1st false start"
        },
        "warning1": {
          "type": "boolean",
          "description": "1st warning"
        },
        "warning2": {
          "type": "boolean",
          "description": "2nd warning"
        },
        "dns": {
          "type": "boolean",
          "description": "Did not start"
        }
      },
      "required": [
        "raceIndex",
        "startPos",
        "rank",
        "time",
        "points",
        "remarks",
        "rr",
        "dsqSF",
        "dsqTF",
        "fs1",
        "warning1",
        "warning2",
        "dns"
      ],
      "additionalProperties": false
    },
    "competitionResult": {
      "type": "object",
      "properties": {
        "rounds": {
          "type": "object",
          "properties": {
            "final-a": {
              "$ref": "#/$defs/raceResult"
            },
            "final-b": {
              "$ref": "#/$defs/raceResult"
            },
            "final-c": {
              "$ref": "#/$defs/raceResult"
            },
            "final-d": {
              "$ref": "#/$defs/raceResult"
            },
            "final-e": {
              "$ref": "#/$defs/raceResult"
            },
            "final-f": {
              "$ref": "#/$defs/raceResult"
            },
            "semifinals": {
              "$ref": "#/$defs/raceResult"
            },
            "quarterfinals": {
              "$ref": "#/$defs/raceResult"
            },
            "eighthfinals": {
              "$ref": "#/$defs/raceResult"
            },
            "heats": {
              "$ref": "#/$defs/raceResult"
            }
          },
          "required": [],
          "additionalProperties": false
        },
        "ranking": {
          "allOf": [
            {
              "type": "object",
              "properties": {
                "0": {
                  "$ref": "#/$defs/ranking"
                }
              },
              "required": [
                "0"
              ],
              "description": "Main evaluation"
            },
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/ranking"
              },
              "description": "Key is the evaluation ID"
            }
          ]
        }
      },
      "required": [
        "rounds",
        "ranking"
      ],
      "additionalProperties": false
    },
    "athleteResults": {
      "type": "object",
      "properties": {
        "overall": {
          "allOf": [
            {
              "type": "object",
              "properties": {
                "0": {
                  "$ref": "#/$defs/ranking"
                }
              },
              "required": [
                "0"
              ],
              "description": "Main evaluation"
            },
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/ranking"
              },
              "description": "Key is the evaluation ID"
            }
          ]
        },
        "competitions": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/competitionResult"
          },
          "description": "Key is the competition ID"
        }
      },
      "required": [
        "overall",
        "competitions"
      ],
      "additionalProperties": false
    },
    "athlete": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "bib": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "lastName": {
          "type": "string",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "minLength": 1
        },
        "club": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "nation": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 3,
              "maxLength": 3,
              "description": "IOC country code"
            },
            {
              "type": "null"
            }
          ]
        },
        "ageGroupId": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "evaluationIds": {
          "type": "array",
          "items": [
            {
              "const": "0"
            }
          ],
          "additionalItems": {
            "type": "string",
            "minLength": 1
          },
          "description": "Evaluations the athlete is ranked in"
        },
        "results": {
          "$ref": "#/$defs/athleteResults"
        }
      },
      "required": [
        "id",
        "bib",
        "lastName",
        "firstName",
        "club",
        "nation",
        "ageGroupId",
        "evaluationIds",
        "results"
      ],
      "additionalProperties": false
    },
    "raceStatus": {
      "anyOf": [
        {
          "const": "open"
        },
        {
          "const": "seeded"
        },
        {
          "const": "done"
        }
      ]
    },
    "roundStatus": {
      "anyOf": [
        {
          "const": "open"
        },
        {
          "const": "seeded"
        },
        {
          "const": "done"
        }
      ]
    },
    "roundLabel": {
      "type": "string",
      "minLength": 1
    },
    "timetableNumber": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ]
    },
    "smallFinal": {
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/$defs/roundStatus"
        },
        "timetableNumber": {
          "$ref": "#/$defs/timetableNumber"
        },
        "label": {
          "$ref": "#/$defs/roundLabel"
        }
      },
      "required": [
        "status",
        "timetableNumber"
      ],
      "additionalProperties": false
    },
    "qualifiersCount": {
      "type": "integer",
      "minimum": 0
    },
    "qualifiersByRank": {
      "type": "object",
      "properties": {
        "byRank": {
          "$ref": "#/$defs/qualifiersCount"
        }
      },
      "required": [
        "byRank"
      ],
      "additionalProperties": false
    },
    "qualifiersByTime": {
      "type": "object",
      "properties": {
        "byTime": {
          "$ref": "#/$defs/qualifiersCount"
        }
      },
      "required": [
        "byTime"
      ],
      "additionalProperties": false
    },
    "qualifiers": {
      "allOf": [
        {
          "$ref": "#/$defs/qualifiersByTime"
        },
        {
          "$ref": "#/$defs/qualifiersByRank"
        }
      ]
    },
    "qualificationRace": {
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/$defs/roundStatus"
        }
      },
      "required": [
        "status"
      ],
      "additionalProperties": false
    },
    "qualificationRound": {
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/$defs/roundStatus"
        },
        "timetableNumber": {
          "$ref": "#/$defs/timetableNumber"
        },
        "label": {
          "$ref": "#/$defs/roundLabel"
        },
        "races": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/qualificationRace"
          },
          "minItems": 1
        }
      },
      "required": [
        "status",
        "timetableNumber",
        "races"
      ],
      "additionalProperties": false
    },
    "competition": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "distance": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "description": "Distance in meters"
        },
        "done": {
          "type": "boolean"
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "description": "Priority of competitions in case of a tie in points; currently not used"
        },
        "rounds": {
          "type": "object",
          "properties": {
            "final-a": {
              "type": "object",
              "properties": {
                "status": {
                  "$ref": "#/$defs/roundStatus"
                },
                "timetableNumber": {
                  "$ref": "#/$defs/timetableNumber"
                },
                "label": {
                  "$ref": "#/$defs/roundLabel"
                }
              },
              "required": [
                "status",
                "timetableNumber"
              ],
              "additionalProperties": false
            },
            "final-b": {
              "allOf": [
                {
                  "$ref": "#/$defs/smallFinal"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiersByRank"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "final-c": {
              "allOf": [
                {
                  "$ref": "#/$defs/smallFinal"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiersByRank"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "final-d": {
              "allOf": [
                {
                  "$ref": "#/$defs/smallFinal"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiersByRank"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "final-e": {
              "allOf": [
                {
                  "$ref": "#/$defs/smallFinal"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiersByRank"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "final-f": {
              "allOf": [
                {
                  "$ref": "#/$defs/smallFinal"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiersByRank"
                        },
                        "final-e": {
                          "$ref": "#/$defs/qualifiersByRank"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "semifinals": {
              "allOf": [
                {
                  "$ref": "#/$defs/qualificationRound"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-e": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-f": {
                          "$ref": "#/$defs/qualifiers"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "quarterfinals": {
              "allOf": [
                {
                  "$ref": "#/$defs/qualificationRound"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-e": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-f": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "semifinals": {
                          "$ref": "#/$defs/qualifiers"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "eighthfinals": {
              "allOf": [
                {
                  "$ref": "#/$defs/qualificationRound"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-e": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-f": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "semifinals": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "quarterfinals": {
                          "$ref": "#/$defs/qualifiers"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            },
            "heats": {
              "allOf": [
                {
                  "$ref": "#/$defs/qualificationRound"
                },
                {
                  "type": "object",
                  "properties": {
                    "qualifiers": {
                      "type": "object",
                      "properties": {
                        "final-a": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-b": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-c": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-d": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-e": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "final-f": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "semifinals": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "quarterfinals": {
                          "$ref": "#/$defs/qualifiers"
                        },
                        "eighthfinals": {
                          "$ref": "#/$defs/qualifiers"
                        }
                      },
                      "required": [],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "qualifiers"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "required": [
            "final-a"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "name",
        "distance",
        "done",
        "rounds"
      ],
      "additionalProperties": false
    },
    "age": {
      "type": "integer",
      "description": "Age in years"
    },
    "ageGroup": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Name including the gender"
        },
        "gender": {
          "anyOf": [
            {
              "const": "female"
            },
            {
              "const": "male"
            },
            {
              "const": "mixed"
            }
          ]
        },
        "ageRange": {
          "type": "array",
          "items": [
            {
              "$ref": "#/$defs/age"
            },
            {
              "$ref": "#/$defs/age"
            }
          ],
          "additionalItems": false,
          "description": "Minimum and maximum age"
        },
        "competitions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/competition"
          }
        }
      },
      "required": [
        "id",
        "name",
        "gender",
        "competitions"
      ],
      "additionalProperties": false
    },
    "evaluation": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false
    }
  }
}