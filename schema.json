{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "const": 1
    },
    "athletes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/athlete"
      }
    },
    "ageGroups": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ageGroup"
      }
    },
    "evaluations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "id",
          "name"
        ],
        "additionalProperties": false
      },
      "minItems": 1,
      "description": "One evaluation must have id \"0\""
    }
  },
  "required": [
    "version",
    "athletes",
    "ageGroups",
    "evaluations"
  ],
  "additionalProperties": false,
  "$defs": {
    "athlete": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "bib": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "lastName": {
          "type": "string",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "minLength": 1
        },
        "club": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "nation": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "IOC country code"
        },
        "ageGroupId": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "results": {
          "type": "object",
          "properties": {
            "overall": {
              "allOf": [
                {
                  "type": "object",
                  "properties": {
                    "0": {
                      "type": "object",
                      "properties": {
                        "rank": {
                          "anyOf": [
                            {
                              "type": "integer",
                              "minimum": 1
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "points": {
                          "anyOf": [
                            {
                              "type": "integer",
                              "minimum": 0
                            },
                            {
                              "type": "null"
                            }
                          ]
                        }
                      },
                      "required": [
                        "rank",
                        "points"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "0"
                  ],
                  "description": "Main evaluation"
                },
                {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "rank": {
                        "anyOf": [
                          {
                            "type": "integer",
                            "minimum": 1
                          },
                          {
                            "type": "null"
                          }
                        ]
                      },
                      "points": {
                        "anyOf": [
                          {
                            "type": "integer",
                            "minimum": 0
                          },
                          {
                            "type": "null"
                          }
                        ]
                      }
                    },
                    "required": [
                      "rank",
                      "points"
                    ],
                    "additionalProperties": false
                  },
                  "description": "Key is the evaluation ID"
                }
              ]
            }
          },
          "required": [
            "overall"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "bib",
        "lastName",
        "firstName",
        "club",
        "nation",
        "ageGroupId",
        "results"
      ],
      "additionalProperties": false
    },
    "raceStatus": {
      "anyOf": [
        {
          "const": "open"
        },
        {
          "const": "seeded"
        },
        {
          "const": "done"
        }
      ]
    },
    "smallFinal": {
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/$defs/raceStatus"
        },
        "timetableNumber": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        },
        "ascenders": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "status",
        "timetableNumber",
        "ascenders"
      ],
      "additionalProperties": false
    },
    "qualificationRound": {
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/$defs/raceStatus"
        },
        "timetableNumber": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "status",
        "timetableNumber"
      ],
      "additionalProperties": false
    },
    "competition": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "distance": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "description": "Distance in meters"
        },
        "rounds": {
          "type": "object",
          "properties": {
            "final-a": {
              "type": "object",
              "properties": {
                "status": {
                  "$ref": "#/$defs/raceStatus"
                },
                "timetableNumber": {
                  "anyOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "null"
                    }
                  ]
                }
              },
              "required": [
                "status",
                "timetableNumber"
              ],
              "additionalProperties": false
            },
            "final-b": {
              "$ref": "#/$defs/smallFinal"
            },
            "final-c": {
              "$ref": "#/$defs/smallFinal"
            },
            "final-d": {
              "$ref": "#/$defs/smallFinal"
            },
            "final-e": {
              "$ref": "#/$defs/smallFinal"
            },
            "final-f": {
              "$ref": "#/$defs/smallFinal"
            },
            "semifinals": {
              "$ref": "#/$defs/qualificationRound"
            },
            "quarterfinals": {
              "$ref": "#/$defs/qualificationRound"
            },
            "eighthfinals": {
              "$ref": "#/$defs/qualificationRound"
            },
            "heats": {
              "$ref": "#/$defs/qualificationRound"
            }
          },
          "required": [
            "final-a"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "name",
        "distance",
        "rounds"
      ],
      "additionalProperties": false
    },
    "ageGroup": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Name including the gender"
        },
        "gender": {
          "anyOf": [
            {
              "const": "female"
            },
            {
              "const": "male"
            },
            {
              "const": "mixed"
            }
          ]
        },
        "ageRange": {
          "type": "array",
          "items": [
            {
              "type": "integer",
              "description": "Age in years"
            },
            {
              "type": "integer",
              "description": "Age in years"
            }
          ],
          "additionalItems": false,
          "description": "Minimum and maximum age"
        },
        "competitions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/competition"
          }
        }
      },
      "required": [
        "id",
        "name",
        "gender",
        "competitions"
      ],
      "additionalProperties": false
    }
  }
}